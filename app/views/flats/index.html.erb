<h2>All Flats</h2>
<p>all <%= @flats.count %> flats</p>
<% @flats.each do |flat| %>
  <div class="card mb-1" style="width: 18rem; display: inline-block;">
    <img src="https://source.unsplash.com/random/100x50" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.description %></p>
        <div class="d-flex">
          <p class="card-text pr-2"><i class="fas fa-users px-1"></i><%= flat.number_of_guests %></p>
          <p class="card-text"><i class="fas fa-dollar-sign px-1"></i><%= flat.price_per_night %></p>
        </div>
      <%= link_to "<button class='btn btn-sm btn-primary'>More info</button>".html_safe, flat_path(flat)  %>
      <%= link_to "<button class='btn btn-sm btn-warning'>Edit</button>".html_safe, edit_flat_path(flat)  %>
      <%= link_to "<button class='btn btn-sm btn-danger'>Remove</button>".html_safe, flat_path(flat), method: :delete,
      data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
